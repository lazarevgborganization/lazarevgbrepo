<UserControl x:Class="TestForSCAUT_v_2.Views.TerminalWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <StackPanel Orientation="Vertical">
        <ListBox BorderThickness="2.5" BorderBrush="Black">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="{Binding Protocol}" MinWidth="70" Margin="10,0,5,0" Background="Aqua"/>
                <TextBlock Text="{Binding SerialID}" MinWidth="70" Margin="0,0,20,0" Background="Aqua"/>
            </StackPanel>
            <Separator Height="5" Visibility="Hidden"/>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="{Binding FirstTypeAndValue}" MinWidth="50" Margin="10,0,5,0" Background="Blue"/>
                <Separator/>
                <TextBlock Text="{Binding SecondTypeAndValue}" MinWidth="50" Margin="0,0,5,0" Background="Blue"/>
                <Separator/>
                <TextBlock Text="{Binding ThirdTypeAndValue}" MinWidth="50" Margin="0,0,15,0" Background="Blue"/>
            </StackPanel>
        </ListBox>
    </StackPanel>
</UserControl>
